@page
@model ChatWebApplication.Pages.UserManagement.SignUpModel

@{
    ViewData["Title"] = "SignUp";
}

<h1>SignUp</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SignUpViewModel.FirstName" class="control-label"></label>
                <input asp-for="SignUpViewModel.FirstName" class="form-control" />
                <span asp-validation-for="SignUpViewModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SignUpViewModel.LastName" class="control-label"></label>
                <input asp-for="SignUpViewModel.LastName" class="form-control" />
                <span asp-validation-for="SignUpViewModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SignUpViewModel.Username" class="control-label"></label>
                <input asp-for="SignUpViewModel.Username" class="form-control" />
                <span asp-validation-for="SignUpViewModel.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SignUpViewModel.Email" class="control-label"></label>
                <input asp-for="SignUpViewModel.Email" class="form-control" />
                <span asp-validation-for="SignUpViewModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SignUpViewModel.Password" class="control-label"></label>
                <input asp-for="SignUpViewModel.Password" class="form-control" />
                <span asp-validation-for="SignUpViewModel.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SignUpViewModel.ContactNumber" class="control-label"></label>
                <input asp-for="SignUpViewModel.ContactNumber" class="form-control" />
                <span asp-validation-for="SignUpViewModel.ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
